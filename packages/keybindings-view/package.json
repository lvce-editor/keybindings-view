{
  "name": "@lvce-editor/keybindings-view",
  "version": "0.0.0-dev",
  "license": "MIT",
  "type": "module",
  "main": "src/keyBindingsViewWorkerMain.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:watch": "nodemon",
    "format": "prettier --write .",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "devDependencies": {
    "@lvce-editor/fuzzy-search": "^1.1.0",
    "@lvce-editor/i18n": "^1.1.0",
    "@lvce-editor/rpc": "^4.18.0",
    "@lvce-editor/rpc-registry": "^3.4.0",
    "@lvce-editor/viewlet-registry": "^1.4.0",
    "@lvce-editor/virtual-dom-worker": "^3.1.0",
    "jest": "^30.1.2",
    "ts-jest": "^29.4.1"
  }
}
