{
  "name": "@lvce-editor/keybindings-view",
  "version": "0.0.0-dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/keybindings-view.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "src/keyBindingsViewWorkerMain.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:watch": "nodemon",
    "format": "prettier --write .",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "devDependencies": {
    "@lvce-editor/constants": "^2.9.0",
    "@lvce-editor/fuzzy-search": "^2.0.1",
    "@lvce-editor/i18n": "^2.1.0",
    "@lvce-editor/rpc": "^5.4.0",
    "@lvce-editor/rpc-registry": "^7.5.0",
    "@lvce-editor/viewlet-registry": "^2.0.0",
    "@lvce-editor/virtual-dom-worker": "^6.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  }
}
